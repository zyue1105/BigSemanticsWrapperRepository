<meta_metadata_repository name="field_report"
  package="crit.semantics.generated.txtf1.fieldreports.spotrep">

  <meta_metadata extends="document" name="spotrep" comment="A 9-line report from the field.">
    <scalar name="time_date" scalar_type="Date" comment="Timestamp for the report." />
    <scalar name="reporting_unit" scalar_type="String" comment="Unit making the report." />
    <scalar name="damage_extent" scalar_type="String" comment="Extent of damage at location." />
    <scalar name="observed_activity" scalar_type="String"
      comment="Deployed unit activity observed at the location." />
    <scalar name="observed_equipment" scalar_type="String" comment="Equipment observed at the location." />

    <scalar name="raw_place" scalar_type="String" comment="Raw place data, including Google maps URL." />
    <composite name="place" type="gis_location" comment="Location of report." />

    <scalar name="observed_units" scalar_type="String" comment="Units observed at location." />
    <scalar name="observed_equipment" scalar_type="String" comment="Equipment observed at location." />
    <scalar name="assessment" scalar_type="String"
      comment="Sender's assessment of the situation at the location, including recommended resources." />
    <scalar name="additional_narrative" scalar_type="String" comment="Additional comments by the observer." />
    <scalar name="photograph_file" scalar_type="String" comment="File containing photograph of the situation." />
<!-- 		<scalar name="photograph_data" scalar_type="BufferedImage" -->
<!--             comment="Photograph of the situation." /> -->

    <scalar name="creation_time" scalar_type="Date" />
    <scalar name="author" scalar_type="String" />
    <scalar name="text" scalar_type="String" />
  </meta_metadata>

  <meta_metadata name="tap_form_spotrep" type="spotrep" parser="xpath"
    comment="Reads properly formatted spotreps produced by TapForms.">

    <selector name="tap_form_spotrep">
      <suffix>tap_form_spotrep</suffix>
    </selector>

    <scalar name="creation_time" comment="Timestamp for the report.">
      <xpath>/html/body/div[2]/table/tbody/tr[1]/td[2]</xpath>
      <regex_op regex="\s+" replace=" " />
    </scalar>
    <scalar name="author" comment="Unit making the report.">
      <xpath>/html/body/div[2]/table/tbody/tr[2]/td[2]</xpath>
    </scalar>
    <scalar name="damage_extent">
      <xpath>/html/body/div[2]/table/tbody/tr[3]/td[2]</xpath>
    </scalar>
    <scalar name="observed_activity">
      <xpath>/html/body/div[2]/table/tbody/tr[4]/td[2]</xpath>
    </scalar>

    <scalar name="raw_place">
      <xpath>/html/body/div[2]/table/tbody/tr[5]/td[2]</xpath>
    </scalar>
    <composite name="place">
      <xpath>/html/body/div[2]/table/tbody/tr[5]/td[2]</xpath>
      <field_parser name="regex_find" regex="q=(-?\d*\.?\d*),(-?\d*\.?\d*)" />
      <scalar name="latitude" field_parser_key="$1" />
      <scalar name="longitude" field_parser_key="$2" />
    </composite>

    <scalar name="observed_units">
      <xpath>/html/body/div[2]/table/tbody/tr[6]/td[2]</xpath>
    </scalar>
    <scalar name="observed_equipment">
      <xpath>/html/body/div[2]/table/tbody/tr[7]/td[2]</xpath>
    </scalar>
    <scalar name="assessment">
      <xpath>/html/body/div[2]/table/tbody/tr[8]/td[2]</xpath>
    </scalar>
    <scalar name="text" comment="Additional comments by the observer.">
      <xpath>/html/body/div[2]/table/tbody/tr[9]/td[2]</xpath>
    </scalar>
    <scalar name="photograph_file">
      <xpath>/html/body/div[3]/img[1]/@src</xpath>
    </scalar>
		<!-- <scalar name="photograph_data"/> -->
  </meta_metadata>

</meta_metadata_repository>