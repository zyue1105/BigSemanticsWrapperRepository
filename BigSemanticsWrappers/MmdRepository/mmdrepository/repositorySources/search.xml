<meta_metadata_repository xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  name="search" package="ecologylab.bigsemantics.generated.library.search" default_user_agent_name="chrome_32">

  <meta_metadata name="search_result" extends="document" show_expanded_initially="true"
    comment="A search result.">
    <scalar name="title" style="h1" />
    <scalar name="description" label="snippet" />
    <composite name="destination_page" type="document" />
  </meta_metadata>

  <meta_metadata name="search" extends="document" comment="A search.">
    <generic_type_var name="SR" extends="document" />

    <scalar name="query" scalar_type="String" />
    <collection name="search_results" child_type="SR" no_wrap="true"
      show_expanded_initially="true" polymorphic_scope="repository_documents" />
    <composite name="next_page" type="search" />
  </meta_metadata>

  <meta_metadata name="image_search" extends="search">
    <collection name="search_results" child_type="image_search_result" child_tag="image_search_result" />
  </meta_metadata>

  <meta_metadata name="google_search" extends="search" parser="xpath"
    comment="The Google search class">
    <generic_type_var name="SR" arg="search_result" />
    <selector url_regex="https?://www.google.com/search\?.*" domain="google.com" />
    <example_url
      url="https://www.google.com/search?q=exploratory+search&amp;sourceid=chrome&amp;ie=UTF-8" />

    <scalar name="query">
      <xpath>//input[@name='q']/@value</xpath>
    </scalar>
    <collection name="search_results">
      <xpath>//div[@id='res']//div//ol/li[@*]</xpath>
      <scalar name="title" hide="true" />
      <scalar name="description">
        <xpath>.//div[@class='s']//span[@class='st']</xpath>
      </scalar>
      <composite name="destination_page">
        <xpath>.</xpath>
        <scalar name="title">
          <xpath>.//h3/a</xpath>
        </scalar>
        <scalar name="location">
          <xpath>.//h3/a/@href</xpath>
        </scalar>
      </composite>
    </collection>
    <composite name="next_page">
      <scalar name="name">
        <xpath>//td[@class='b navend'][2]/a</xpath>
      </scalar>
      <scalar name="location">
        <xpath>//td[@class='b navend'][2]/a/@href</xpath>
      </scalar>
    </composite>
  </meta_metadata>

  <meta_metadata name="google_scholar_search_result" extends="document"
    comment="A google scholar search result" parser="xpath">
    <url_generator type="search" engine="google_scholar" use_id="title" />
    <scalar name="title" as_natural_id="title" />
    <scalar name="document_link" scalar_type="ParsedURL" hide="true" />
    <scalar name="source_info" scalar_type="String" />
    <scalar name="citations" scalar_type="Int" navigates_to="citations_link" />
    <scalar name="citations_link" scalar_type="ParsedURL" hide="true" />
    <scalar name="related_articles_link" scalar_type="ParsedURL" label="related articles" />
    <scalar name="versions" scalar_type="Int" navigates_to="versions_link" />
    <scalar name="versions_link" scalar_type="ParsedURL" hide="true" />
  </meta_metadata>

  <meta_metadata name="google_scholar_search" extends="document" comment="The google Search class"
    parser="xpath">
    <selector url_stripped="http://scholar.google.com/scholar" />

    <collection name="search_results" child_type="google_scholar_search_result" no_wrap="true">
      <xpath>//div[@class='gs_r']</xpath>
      <scalar name="title">
        <xpath>./h3/a</xpath>
      </scalar>
      <scalar name="description">
        <xpath>./div[@class='gs_rs']</xpath>
      </scalar>
      <scalar name="location">
        <xpath>./h3/a/@href</xpath>
      </scalar>
      <scalar name="source_info">
        <xpath>./div[@class='gs_a']</xpath>
      </scalar>
      
      <!-- FIXME this context node is not working -->
<!--       <def_var name="links_row" xpath="./div[@class='gs_fl']" type="node" /> -->

      <scalar name="citations">
        <xpath>./div[@class='gs_fl']/a[1]</xpath>
        <regex_op regex="Cited by " replace="" />
      </scalar>
      <scalar name="citations_link">
        <xpath>./div[@class='gs_fl']/a[1]/@href</xpath>
      </scalar>
      <scalar name="related_articles_link">
        <xpath>./div[@class='gs_fl']/a[2]/@href</xpath>
      </scalar>
      <scalar name="versions">
        <xpath>./div[@class='gs_fl']/a[last()]</xpath>
        <regex_op regex="All | versions" replace="" />
      </scalar>
      <scalar name="versions_link">
        <xpath>./div[@class='gs_fl']/a[last()]/@href</xpath>
      </scalar>
    </collection>

    <semantic_actions>
      <get_field name="search_results" />
      <for_each collection="search_results" as="res">
        <get_field object="res" name="location" />
        <get_field object="res" name="document_link" />
        <if>
          <not_null value="document_link" />
          <parse_document now="true">
            <arg value="document_link" name="location" />
            <arg value="res" name="mixin" />
          </parse_document>
        </if>
        <if>
          <and>
            <null value="document_link" />
            <not_null value="location" />
          </and>
          <parse_document now="true">
            <arg value="location" name="location" />
          </parse_document>
        </if>
        <parse_document now="true">
          <arg value="location" name="location" />
        </parse_document>
      </for_each>
    </semantic_actions>
  </meta_metadata>

