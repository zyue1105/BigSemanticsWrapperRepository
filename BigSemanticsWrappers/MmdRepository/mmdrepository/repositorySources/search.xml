  <meta_metadata name="bing_search_xpath" type="search" parser="xpath"
    user_agent_name="firefox_5" comment="The bing Search class, using xpath parser.">
    <generic_type_var name="SR" arg="document" />
    <selector url_stripped="http://www.bing.com/search" />
    <scalar name="query">
      <xpath>//title/text()</xpath>
      <regex_op regex=" - Bing$" replace="" />
    </scalar>
    <collection name="search_results">
      <xpath>//li[@class='sa_wr']</xpath>
      <scalar name="title">
        <xpath>.//h3/a</xpath>
      </scalar>
      <scalar name="description">
        <xpath>.//div[@class='sa_cc']/p</xpath>
      </scalar>
      <scalar name="location">
        <xpath>.//h3/a/@href</xpath>
      </scalar>
    </collection>
  </meta_metadata>

  <meta_metadata name="social_media_search_result" extends="document"
    comment="A result from a social media search.">
    <scalar name="author" scalar_type="String" comment="The author of this item." />
    <collection name="tags" child_type="document"
      comment="Associated tags from the search engine, if exist." />
  </meta_metadata>

  <meta_metadata name="slashdot_search" extends="search" comment="The slashdot search class"
    user_agent_name="opera_9" parser="xpath">
    <selector url_stripped="http://slashdot.org/index2.pl" />
    <selector url_stripped="http://slashdot.com/index2.pl" />

    <collection name="search_results" child_type="social_media_search_result">
      <xpath>//div[@id='firehoselist']//article</xpath>
      <scalar name="title">
        <xpath>.//h2</xpath>
      </scalar>
      <scalar name="location">
        <xpath>.//h2//a[1]/@href</xpath>
      </scalar>
      <scalar name="description">
        <xpath>./div[@class='hide']/div/i</xpath>
      </scalar>
      <scalar name="author">
        <xpath>./header/div[@class='details']/a</xpath>
      </scalar>
      <collection name="tags">
        <xpath>./footer//div[@class='grid_14']//a[@class='popular tag']</xpath>
        <scalar name="title">
          <xpath>.</xpath>
        </scalar>
        <scalar name="location">
          <xpath>./@href</xpath>
        </scalar>
      </collection>
    </collection>
  </meta_metadata>

  <meta_metadata name="delicious_search" extends="search" comment="The delicious search class"
    user_agent_name="opera_9" parser="xpath">
    <selector url_stripped="http://www.delicious.com/search" />
    <collection name="search_results" child_type="social_media_search_result">
      <xpath>//div[@id='content']/ul/li</xpath>
      <scalar name="title">
        <xpath>.//div/h4/a</xpath>
      </scalar>
      <scalar name="location">
        <xpath>.//div/h4/a/@href</xpath>
      </scalar>
      <scalar name="author">
        <xpath>./div/div[@class='meta']//span[1]</xpath>
      </scalar>
      <collection name="tags">
        <xpath>./div/div[@class='tagdisplay']//a</xpath>
        <scalar name="title">
          <xpath>.</xpath>
        </scalar>
        <scalar name="location">
          <xpath>./@href</xpath>
        </scalar>
      </collection>
    </collection>
  </meta_metadata>

  <meta_metadata name="tumblr_search" extends="search" comment="The tumblr search class"
    user_agent_name="opera_9" parser="xpath">
    <selector url_path_tree="http://www.tumblr.com/tagged/" />
    <collection name="search_results" child_type="social_media_search_result">
      <xpath>//div[@id='left_column']//li</xpath>
      <scalar name="title">
        <xpath>.//div[@class='post_title']</xpath>
      </scalar>
      <scalar name="description">
        <xpath>.//div[@class='post_content']</xpath>
      </scalar>
      <scalar name="author">
        <xpath>./div[@class='post_info']</xpath>
      </scalar>
      <collection name="tags">
        <xpath>./div[@class='footer_links with_tags']//a</xpath>
        <scalar name="title">
          <xpath>.</xpath>
        </scalar>
        <scalar name="location">
          <xpath>./@href</xpath>
        </scalar>
      </collection>
    </collection>
  </meta_metadata>

